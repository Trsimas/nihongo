<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - nihongo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/nihongo.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="">
                <img src="~/imagens/logo.png">
                <img src="~/imagens/nome.png">
            </div>

            <div class="container-fluid col">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item ms-auto">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home"
                                asp-action="Index">Cadastre-se</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home"
                                asp-action="Privacy">Login</a>
                        </li>
                    </ul>
                    <div class="navbar-nav">
                        <div class="dropdown ms-auto">
                            <a href="" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#">Categoria</a>
                            <ul class="dropdown-menu">
                                <li class="dropdown-item"></li>
                                <li class="dropdown-item"></li>
                            </ul>
                        </div>
                    </div>
                    <button class="navbar-toggler" type="button" data-bs-toogle="collapse" data-bs-target="#meuMenu">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="meuMenu">
                        <div class="d-flex ms-auto">
                            <input class="form-control me-2" type="search" placeholder="Pesquisar..."
                                aria-label="Search">
                            <button class="btn btn-outline-danger" type="submit">Pesquisar</button>
                        </div>
                    </div>
                </div>
                <div class="text-white fs-2 p-4">
                    <i class="bi bi-house"></i>
                    <i class="bi bi-cart2"></i>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">

            @RenderBody()

        </main>
    </div>


    <footer class="border-top footer text-muted bg-dark d-flex justify-content-center">
        <div class="row p-3 text-white g-5">
            <div class="col">
                <p>Endereço</p>
                <p>Av.Paulista</p>
                <p>São Paulo</p>
            </div>
            <div class="col">
                <p>Aberto</p>
                <p>Seg-Sáb: 9h-22h</p>
                <p>Domingo: 17h-22h</p>
            </div>
            <div class="col">
                <p>Contato</p>
                <p>18 99178-5743</p>
                <p>11 3406-3647</p>
            </div>
            <div class="col">
                <p>Seguir</p>
                <i class="bi bi-instagram"></i>
                <i class="bi bi-twitter"></i>
                <i class="bi bi-facebook"></i>
            </div>
            

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
