@model nihongo.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h4>Deseja realmente deletar?</h4>
<div>
    <h4>CATEGORIA</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    
